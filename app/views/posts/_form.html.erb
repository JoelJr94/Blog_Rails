<%= simple_form_for(@post) do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body, input_html: {rows:15} %>
    <%= f.association :category, collection: @categories, prompt: "Choose a Category..." %>
  </div>

  <div class="form-actions d-grid gap-2">
    <%= f.button :submit, class:"btn btn-secondary btn-lg" %>
  </div>
<% end %>
